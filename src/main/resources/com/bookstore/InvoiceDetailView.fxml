<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bookstore.controller.InvoiceDetailController"
            prefWidth="450" prefHeight="350">

    <VBox spacing="10" padding="20">
        <Label text="Invoice Details" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints halignment="LEFT"/>
            </columnConstraints>

            <Label text="Invoice ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="lblId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Customer:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="lblCustomer" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Label fx:id="lblDate" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Total Amount:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="lblTotal" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="lblStatus" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <Button text="Close" onAction="#onClose" prefWidth="100"/>
    </VBox>
</AnchorPane>
