<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bookstore.controller.EditCustomerController">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Edit Customer" style="-fx-font-size: 20; -fx-font-weight: bold"/>

    <TextField fx:id="nameField"    promptText="Name"/>
    <TextField fx:id="emailField"   promptText="Email"/>
    <TextField fx:id="phoneField"   promptText="Phone"/>
    <TextField fx:id="addressField" promptText="Address"/>

    <HBox spacing="10">
        <Button text="Save"   onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>

</VBox>
