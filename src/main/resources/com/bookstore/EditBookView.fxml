<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bookstore.controller.EditBookController"
      spacing="10" padding="15">

    <Label text="Edit Book" style="-fx-font-size: 20; -fx-font-weight: bold"/>

    <TextField fx:id="titleField" promptText="Book Title"/>
    <TextField fx:id="authorField" promptText="Author"/>
    <TextField fx:id="priceField" promptText="Price"/>

    <HBox spacing="10">
        <Button text="Save" onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>

</VBox>
