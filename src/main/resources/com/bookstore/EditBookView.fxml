<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bookstore.controller.EditBookController"
      spacing="10">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Edit Book" style="-fx-font-size: 20; -fx-font-weight: bold"/>

    <TextField fx:id="titleField"     promptText="Book Title"/>
    <TextField fx:id="authorField"    promptText="Author"/>
    <TextField fx:id="priceField"     promptText="Price"/>
    <TextField fx:id="quantityField"  promptText="Quantity"/>

    <HBox spacing="10">
        <Button text="Save"   onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>

</VBox>
