<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bookstore.controller.BooksController"
      spacing="15">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="ðŸ“˜ Books Management"
           style="-fx-font-size: 20; -fx-font-weight: bold;" />

    <!-- SEARCH BAR -->
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search by title..."
                   style="-fx-pref-width: 250;" />
        <Button text="Search" onAction="#onSearch" styleClass="button-primary"/>
        <Button text="Add Book" onAction="#onAddBook" styleClass="button-primary"/>
        <Button text="Refresh" onAction="#onRefresh" styleClass="button-primary"/>
    </HBox>

    <!-- TABLE -->
    <TableView fx:id="bookTable" prefHeight="500">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
            <TableColumn fx:id="colTitle" text="Title" prefWidth="200"/>
            <TableColumn fx:id="colAuthor" text="Author" prefWidth="150"/>
            <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
            <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="colAction" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>
